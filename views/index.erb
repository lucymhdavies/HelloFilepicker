<script type="text/javascript" src="//api.filepicker.io/v2/filepicker.js"></script>

<script>

$(function() {
	filepicker.pick(
		{
			services: ['DROPBOX','GOOGLE_DRIVE']
		},
		function(blob){
			console.log(blob);
			filepicker.stat(
				blob,
				{
					filename: true,
					md5: true,
					location: true,
					path: true,
					container: true
				},
				function(metadata){
					console.log(JSON.stringify(metadata));
				}
			);
		}
	);
});
</script>

